<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/bg_white_radius_corner" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/realTime_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/realTime"/>

                <TextView
                    android:id="@+id/day_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/dayDecided"/>

                <TextView
                    android:id="@+id/month_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="@string/monthDecided"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/big_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_big"/>

            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_white_radius_corner">
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/bg_white_radius_corner">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/camera_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <lxing14.software.edu.nju.cn.waterqualitymonitoring.view.CameraChoiceView
                        android:id="@+id/camera1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <lxing14.software.edu.nju.cn.waterqualitymonitoring.view.CameraChoiceView
                        android:id="@+id/camera2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <lxing14.software.edu.nju.cn.waterqualitymonitoring.view.CameraChoiceView
                        android:id="@+id/camera3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <lxing14.software.edu.nju.cn.waterqualitymonitoring.view.CameraChoiceView
                        android:id="@+id/camera4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <lxing14.software.edu.nju.cn.waterqualitymonitoring.view.CameraChoiceView
                        android:id="@+id/camera5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/flow_iv"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_default_pic"/>

                <TextView
                    android:id="@+id/cameraHint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/flow_iv"
                    android:layout_toRightOf="@id/flow_iv"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <View
                    android:id="@+id/split_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_toRightOf="@id/flow_iv"
                    android:layout_below="@id/cameraHint_tv"
                    android:background="@color/lightGray"/>

                <TextView
                    android:id="@+id/flowSpeed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flow_iv"
                    android:layout_below="@id/split_view"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="流量："/>

                <TextView
                    android:id="@+id/averageFlowSpeed_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flow_iv"
                    android:layout_below="@id/flowSpeed_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="平均流速："/>

                <TextView
                    android:id="@+id/photoByDate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flow_iv"
                    android:layout_below="@id/averageFlowSpeed_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="拍摄于："/>


                <TextView
                    android:id="@+id/flowNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/flowSpeed_tv"
                    android:layout_below="@id/split_view"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/lightRed" />

                <TextView
                    android:id="@+id/averageFlowSpeedNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/averageFlowSpeed_tv"
                    android:layout_below="@id/flowNum_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/lightRed" />

                <TextView
                    android:id="@+id/dateNum_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/photoByDate_tv"
                    android:layout_below="@id/averageFlowSpeedNum_tv"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/lightRed" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_height="500dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="@string/map"
                android:textSize="14sp"
                android:textColor="@color/black"/>

            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>



